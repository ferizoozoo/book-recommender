{
  "compilerOptions": {
    "target": "es2022", // Modern Node.js versions support this.
    "module": "esnext", // This is good for ES Modules.
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false // for typeorm, since the properties of entities don't need to be initialized
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}